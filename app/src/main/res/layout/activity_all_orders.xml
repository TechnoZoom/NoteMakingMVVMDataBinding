<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.homelane.notetaking.orderlifecycle.AllOrdersActivity">

    <data>
        <import type="android.view.View" />
        <variable
            name="allOrdersViewModel"
            type="com.homelane.notetaking.orderlifecycle.AllOrdersViewModel" />
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_cord"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:title="@string/all_notes"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>

        <include layout="@layout/content_all_orders"
            android:id="@+id/cont_all_orders"/>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="@{allOrdersViewModel.dataLoading ? View.GONE : View.VISIBLE}"
            />

    </android.support.design.widget.CoordinatorLayout>

</layout>